{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "make start-app",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10,
      "migrate": "php artisan migrate --seed"
    }
}